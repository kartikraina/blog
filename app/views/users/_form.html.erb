<%= render 'shared/errors', obj: @user%>

<%= form_for @user do |f| %>
  <p>
    <%= f.label 'Username' %>
    <%= f.text_field :username, placeholder: 'Create Username' %>
  </p>
  <p>
    <%= f.label 'email' %>
    <%= f.email_field :email, placeholder: 'Enter email' %>
  </p>
  <p>
  </p>
    <%= f.label 'password'%>
    <%= f.password_field :password, placeholder: 'Create password'%>
  <p>
    <%= f.submit(@user.new_record? ? "Signup" : "Update your account")%>
  </p>
<%end%>


